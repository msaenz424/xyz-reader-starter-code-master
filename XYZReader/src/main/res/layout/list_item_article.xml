<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/horizontal_list_inner_padding"
    android:paddingRight="@dimen/horizontal_list_inner_padding"
    android:paddingTop="@dimen/vertical_list_inner_padding"
    android:paddingBottom="@dimen/vertical_list_inner_padding"
    android:background="@drawable/borderline_background"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:paddingRight="@dimen/horizontal_list_inner_padding">

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_title_item"
            android:textSize="@dimen/list_item_title_text_size" />

        <TextView
            android:id="@+id/article_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_subtitle_item"
            android:textSize="@dimen/list_item_subtitle_text_size" />

    </LinearLayout>

    <!--suppress AndroidLintContentDescription -->
    <com.example.xyzreader.ui.DynamicHeightNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_thumbnail_height"
        android:layout_gravity="center"
        android:background="@color/photo_placeholder"
        android:layout_weight="2"
        android:scaleType="centerCrop" />

</LinearLayout>